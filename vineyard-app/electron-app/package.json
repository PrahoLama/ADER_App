{
  "name": "ader-vineyard-app",
  "version": "1.0.0",
  "description": "ADER Multi-Industry Drone Analysis - Offline Desktop Application",
  "main": "main.js",
  "author": "ADER Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "setup": "node setup-app.js",
    "setup:python": "node setup-python.js",
    "build": "npm run setup && npm run build:win",
    "build:full": "npm run setup && npm run setup:python && npm run build:win",
    "build:win": "electron-builder --win --x64",
    "build:portable": "electron-builder --win portable",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "archiver": "^6.0.1",
    "sharp": "^0.33.2",
    "form-data": "^4.0.0",
    "axios": "^1.6.2",
    "dotenv": "^16.4.1"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.ader.vineyard-app",
    "productName": "ADER Drone Analyzer",
    "copyright": "Copyright Â© 2026 ADER Team",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "frontend-build/**/*",
      "node_modules/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig"
    ],
    "extraResources": [
      {
        "from": "server",
        "to": "server",
        "filter": [
          "**/*",
          "!venv/**",
          "!orthomosaic_projects/**",
          "!uploads/**",
          "!cache/**",
          "!tmp/**",
          "!__pycache__/**",
          "!*.pyc"
        ]
      },
      {
        "from": "models",
        "to": "models",
        "filter": ["**/*"]
      },
      {
        "from": "frontend-build",
        "to": "frontend-build",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png",
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ADER Drone Analyzer",
      "perMachine": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}"
    }
  }
}
